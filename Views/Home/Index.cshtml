@using ToDoList.ViewModel
@model List<viewModel>
@{
    ViewData["Title"] = "Home Page";
}


<div class="container p-3">
    <div class="row pt-4">
        <div class="col-6">
            <h2 class="text-primary">To Do List</h2>
        </div>
        <div class="col-6 text-end">
            <a asp-controller="Home" asp-action="RemoveAll" class="btn btn-danger">
                <i class="bi bi-trash2-fill"></i> &nbsp; Delete All
            </a>
            <a asp-controller="Home" asp-action="Create" class="btn btn-primary  bg-dark">
                <i class="bi bi-plus-circle"></i> &nbsp; New To Do List
            </a>
        </div>
    </div>
    <br /><br />
    @*<table class = "table table-bordered table-striped">*@
    <table class="table table-bordered table-dark">
        <thead>
            <tr>
                <th>S/N</th>
                <th>ToDo Task/Name</th>
                <th>Date created</th>
                <th>Due Date/Time</th>
                <th></th>
            </tr>
        </thead>
        <tbody>
                @{var count = 0;}
            @foreach(var member in Model){
            <tr>
                <td width="5%">@(count+=1)</td>
                
                <td width="20%">@member.task</td>
                <td width="20%">@member.createdDate</td>
                <td  width="20%">@member.dueDate</td>
                

                <td>
                    <div class="w-100 btn-group" role="group">
                        <a class="btn btn-primary  mx-2" asp-controller="Home" asp-action="Edit" asp-route-id="@member.Id"><i class="bi bi-pen"></i> Edit</a>
                        <a class="btn btn-danger mx-2" asp-controller="Home" asp-action="Delete" asp-route-id="@member.Id"><i class="bi bi-trash3-fill"></i> Trash</a>
                        @*<a class="btn btn-danger mx-2" asp-controller="Home" asp-action="DeleteById" asp-route-id="@member.Id"><i class="bi bi-trash3-fill"></i> Trash</a>*@
                    </div>
                </td>
            </tr>
            }
        </tbody>


    </table>
</div>